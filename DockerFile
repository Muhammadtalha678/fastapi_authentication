# Base image.
FROM python:3.12-slim-trixie

# Install ALL ODBC dependencies (including FreeTDS)
# This uses the apt-get command which only works during the Docker build
RUN apt-get update && \
    apt-get install -y unixodbc-dev freetds-dev && \
    # Optional: If you still want the Microsoft driver, add this section back:
    # apt-get install -y apt-transport-https gnupg2 odbcinst && \
    # curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    # curl https://packages.microsoft.com/config/debian/11/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    # apt-get update && \
    # ACCEPT_EULA=Y apt-get install -y msodbcsql17 && \
    ldconfig

# Install uv.
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

Add . /app

# Working directory set karein.
WORKDIR /app


# Dependencies install karein uv.lock file se.
# --locked flag se ye ensure hota hai ke sirf wohi versions install hon jo lock file mein hain.
RUN uv sync --locked

# Ab baki ka application code copy karein.
# Ye step tab hi chalega jab code mein tabdeeli ho.
COPY . .

# Default port expose karein.
EXPOSE 8000

# Application run karein.
CMD ["uv", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port","8000"]